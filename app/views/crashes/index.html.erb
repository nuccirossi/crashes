<p id="notice"><%= notice %></p>

<h1>Listing Crashes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Operator</th>
      <th>Flight</th>
      <th>Route</th>
      <th>Type</th>
      <th>Registration</th>
      <th>Cn</th>
      <th>Aboard</th>
      <th>Fatalities</th>
      <th>Ground</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crashes.each do |crash| %>
      <tr>
        <td><%= crash.date %></td>
        <td><%= crash.time %></td>
        <td><%= crash.location %></td>
        <td><%= crash.operator %></td>
        <td><%= crash.flight %></td>
        <td><%= crash.route %></td>
        <td><%= crash.type %></td>
        <td><%= crash.registration %></td>
        <td><%= crash.cn %></td>
        <td><%= crash.aboard %></td>
        <td><%= crash.fatalities %></td>
        <td><%= crash.ground %></td>
        <td><%= crash.summary %></td>
        <td><%= link_to 'Show', crash %></td>
        <td><%= link_to 'Edit', edit_crash_path(crash) %></td>
        <td><%= link_to 'Destroy', crash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

